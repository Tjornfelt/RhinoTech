@model RhinoTech.App.Models.ViewModels.FrontPageModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PreContent {
<div id="myCarousel" class="carousel fade" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active" style="background-image: url('/Content/Images/sebastian-working.jpg')">
        </div>

        <div class="item" style="background-image: url('/Content/Images/lego-model.jpg')">
        </div>
        <div class="item" style="background-image: url('/Content/Images/refrigerator.jpg')">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
}

<h1>@Model.Header</h1>
@Model.BodyText