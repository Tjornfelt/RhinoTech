@model RhinoTech.App.Models.HelperModels.ContactFormModel

<div class="row">
    @using (Ajax.BeginForm("ContactFormSubmit", "FormsSurface", new {ID = Model.ID}, new AjaxOptions { HttpMethod = "POST", OnComplete = "$('#thanks').show(); $('#contact-form, .hidden-submit').hide();" }, null))
    {
        <div id="contact-form" class="col-sm-10 col-sm-push-1">
            <div class="row">
                <div class="col-sm-12">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.LabelFor(m => m.Phone)
                    @Html.TextBoxFor(m => m.Phone)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.LabelFor(m => m.Address)
                    @Html.TextBoxFor(m => m.Address)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.LabelFor(m => m.PostalCity)
                    @Html.TextBoxFor(m => m.PostalCity)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.LabelFor(m => m.Message)
                    @Html.TextAreaFor(m => m.Message)
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
            </div>

            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
        <div id="thanks" class="col-sm-10 col-sm-push-1">
            @Model.ThanksText
        </div>

    }
</div>